@startuml EasySave_Use_Case_Diagram_v2.0
!theme plain
left to right direction

' =============== ACTORS ===============
actor "User" as User
actor "System Administrator" as Admin

' =============== SYSTEM BOUNDARY ===============
rectangle "EasySave v2.0" {
    
    ' Job Management
    package "Job Management" {
        usecase "Create Backup Job" as UC1
        usecase "List Backup Jobs" as UC2
        usecase "Edit Backup Job" as UC3
        usecase "Delete Backup Job" as UC4
        
        note right of UC1
            v2.0: Unlimited jobs
            (v1.0/v1.1: limited to 5)
            Define: name, source, target, type
        end note
    }
    
    ' Backup Execution
    package "Backup Execution" {
        usecase "Run Single Backup" as UC5
        usecase "Run All Backups\n(Sequential)" as UC6
        usecase "Execute via\nCommand Line" as UC7
        
        note right of UC7
            Examples:
            EasySave.exe 1-3
            EasySave.exe 1;3
        end note
    }
    
    ' Backup Types
    package "Backup Types" {
        usecase "Perform Full Backup" as UC8
        usecase "Perform Differential\nBackup" as UC9
        
        note right of UC8
            Copy all files
            v2.0: With optional encryption
        end note
        
        note right of UC9
            Copy only modified files
            v2.0: With optional encryption
        end note
    }
    
    ' Configuration
    package "Configuration" {
        usecase "Change Language" as UC10
        usecase "Select Language\n(EN/FR)" as UC11
        
        note right of UC11
            Persistent setting
        end note
    }
    
    ' Monitoring
    package "Monitoring" {
        usecase "View Real-Time\nProgress" as UC12
        usecase "Consult Daily Logs" as UC13
        usecase "Check Backup State" as UC14
        
        note right of UC13
            v1.1: JSON or XML format
            UNC paths
            Daily files
        end note
    }
    
    ' v2.0: Settings & Configuration
    package "Settings & Configuration (v2.0)" {
        usecase "Configure Encryption" as UC15
        usecase "Set Priority Extensions" as UC16
        usecase "Configure Business Software" as UC17
        usecase "Choose Log Format\n(JSON/XML)" as UC18
        
        note right of UC15
            v2.0: Specify CryptoSoft.exe path
            and file extensions to encrypt
        end note
        
        note right of UC17
            v2.0: Block backups when
            specific software is running
        end note
    }
    
    ' v2.0: GUI Interface
    package "GUI Interface (v2.0)" {
        usecase "Use Graphical Interface" as UC19
        usecase "Drag & Drop Files" as UC20
        usecase "View Real-Time State" as UC21
        
        note right of UC19
            v2.0: Alternative to CLI
            WPF/Avalonia interface
        end note
    }
}

' =============== EXTERNAL SYSTEMS ===============
rectangle "External Systems" {
    usecase "Write to Local Disk" as EXT1
    usecase "Write to External Disk" as EXT2
    usecase "Write to Network Drive" as EXT3
    usecase "Encrypt with CryptoSoft" as EXT4
    usecase "Check Running Processes" as EXT5
}

