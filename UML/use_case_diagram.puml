@startuml EasySave_Use_Case_Diagram_v3.0
!theme plain
left to right direction

actor "User" as User
actor "System Administrator" as Admin

rectangle "EasySave v3.0" {
    
    package "Job Management" {
        usecase "Create/Edit Jobs" as UC_Manage
        usecase "Manage Priority Extensions" as UC_Priority
    }
    
    package "Execution" {
        usecase "Execute Jobs (Parallel)" as UC_Exec
        usecase "Pause/Resume Job" as UC_Pause
        usecase "Stop Job" as UC_Stop
        usecase "Auto-Pause (Business Soft)" as UC_AutoPause
    }
    
    package "Configuration" {
        usecase "Configure Throttling" as UC_Throttle
        usecase "Configure Network Logging" as UC_NetLog
        usecase "Configure Encryption" as UC_Encrypt
    }
    
    package "Monitoring" {
        usecase "View Real-Time Progress" as UC_Monitor
        usecase "View Centralized Logs" as UC_ViewLogs
    }
}

rectangle "External Systems" {
    usecase "Docker Log Server" as EXT_Docker
    usecase "CryptoSoft" as EXT_Crypto
}

' Relations
User --> UC_Manage
User --> UC_Exec
User --> UC_Pause
User --> UC_Stop
User --> UC_Monitor

Admin --> UC_Priority
Admin --> UC_Throttle
Admin --> UC_NetLog
Admin --> UC_ViewLogs

' Dependencies
UC_Exec ..> UC_AutoPause : <<include>>
UC_Exec ..> UC_Encrypt : <<include>>
UC_Exec ..> UC_NetLog : <<include>>

UC_AutoPause ..> UC_Monitor : Update Status

' External
UC_NetLog --> EXT_Docker : Sends Logs
UC_Encrypt --> EXT_Crypto : Invokes
UC_ViewLogs ..> EXT_Docker : Reads

@enduml
